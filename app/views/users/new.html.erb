<div class="login-background">
  <div class="login">
    <div class="image">
    </div>
    <%= form_for @user do |user| %>
      <div class="path">
      <% if flash[:error_messages]%>
        <% flash[:error_messages].each do |errormessage|%>
          <%= errormessage %><br>
        <% end %>
      <% end %>
        <div>
          <span class="material-icons" id="login-icon">face</span>
          <h3>Sign up!</h3>
        </div>
        <div>
          <span class="material-icons">person</span>
          <%= user.text_field :username, placeholder:"Username", class:"username-field", id:"username"%>
        </div>
        <div>
          <span class="material-icons">create</span>
          <%= user.text_field :fullname, placeholder:"Full name", class:"username-field",  id:"fullname"%>
        </div>
        <div>
          <h5>Add profile photo: </h5>
          <%= user.file_field :profilephoto, id:"photo" %>
        </div>
        <div>
          <h5>Add cover image: </h5>
          <%= user.file_field :coverImage, id:"coverimage" %>
        </div>
        <div>
          <span>Already have an account? <%= link_to "Login", login_path %></span>
          <%= user.submit "Sign up", class:'btn', id:"signup"%>
        </div>
      </div>
    <% end %>
  </div>
</div>