<div class="login-cover text-center">
  <div class="twitter-logo">
      <i class="fab fa-twitter fa-3x"></i>
  </div>
  <h3>Sign Up to Twitter</h3>
</div>
<%= form_for (@user), :url => users_path, :html => {class: "text-center login-form"} do |f| %>
  <% if flash[:error_messages]%>
        <% flash[:error_messages].each do |errormessage|%>
          <%= errormessage %><br>
        <% end %>
  <% end %>
  <div class="form-label">
    <%= f.label :Username, class: "username-label" %>
  </div>
  <div class="form-input">
    <%= f.text_field :username, class: "username-input", placeholder: "Enter Username" %>
  </div>

  <div class="form-label">
    <%= f.label :Fullname, class: "Fullname-label" %>
  </div>
  <div class="form-input">
    <%= f.text_field :fullname, class: "Fullname-input", placeholder: "Enter Fullname" %>
  </div>

  <div class="form-label">
    <%= f.label :Photo, class: "Photo-label" %>
  </div>
  <div class="form-input">
    <%= f.file_field :profilephoto, class: "Photo-input text-center" %>
  </div>

  <div class="form-label">
    <%= f.label :CoverImage, class: "cover-image-label" %>
  </div>
  <div class="form-input">
    <%= f.file_field :coverImage, class: "cover-image-input text-center" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Sign Up",  class: "btn btn-primary signup-btn"%>    
  </div>
  <%= link_to "Login in to Twitter", login_path %>
<% end %>