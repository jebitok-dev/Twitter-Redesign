<div class="column is-one-quarter">
    <nav class="panel">
        <p class="panel-heading">Profile</p>
        <div class="panel-block">
            <article class="media">
                <div class="media-left">
                    <figure class="image is-64x64">
                        <%= gravatar_image_tag(current_user.username, size: 64, alt: current_user.username) %>
                    </figure>
                </div>
                <div class="media-content">
                    <div class="content">
                        <p>
                            <strong><%= current_user.fullname %></strong><br />
                            <small><%= current_user.username %></small><br />
                        </p>
                    </div>
                </div>
            </article>
        </div>
        <div class="panel-block">
            <div class="level is-block">
                <div class="level-item has-centered-text">
                    <div>
                        <p class="heading">Opinions</p>
                        <p class="title is-6"><%= current_user.opinions.count %></p>
                    </div>
                     <div>
                        <p class="heading">Following</p>
                        <p class="title is-6">123</p>
                    </div>
                     <div>
                        <p class="heading">Followers</p>
                        <p class="title is-6">18.5K</p>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</div>